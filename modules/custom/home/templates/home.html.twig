<main>

    <!-- banner-area -->
    <section class="banner-area">
        <div class="banner-shape" data-background="{{home_data.left_banner}}"></div>
        <div class="banner-bg" data-background="{{home_data.banner}}">
            <div class="banner-content">
                <h2 class="title wow fadeInDown" data-wow-delay=".2s">{{home_data.title}}</h2>
                <p class="wow fadeInUp" data-wow-delay=".2s">{{home_data.description}}</p>
            </div>
        </div>

        <!-- brand-area -->
        <div class="brand-area">
            <div class="container">
                <div class="brand-inner">
                    <div class="row brand-active">
                    {% for val in brand_carousel %}
                        <div class="col-12">
                            <div class="brand-item">
                                <img src="{{val}}" alt="">
                            </div>
                        </div>
                    {% endfor %}
                    </div>
                </div>
            </div>
        </div>
        <!-- brand-area-end -->

    </section>
    <!-- banner-area-end -->

    <!-- features-area -->
    <section class="features-area pt-120">
        <div class="container">
            <div class="row justify-content-center">
            {% for val in home_data.cards %}
                <div class="col-lg-4 col-md-6">
                    <div class="features-item wow fadeInUp" data-wow-delay=".2s">
                        <div class="features-item-inner">
                            <div class="features-content">
                                <h4 class="title">{{val.title}}</h4>
                                <p>{{val.description}}</p>
                            </div>
                            <div class="features-icon">
                                <img src="{{val.icon}}" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
            </div>
        </div>
    </section>
    <!-- features-area-end -->

    <!-- about-area -->
    {{ drupal_block('views_block:about_us-block_1') }}
    <!-- about-area-end -->

    <!-- services-area -->
    <section class="inner-services-area pb-90">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="section-title text-center mb-50">
                        <span class="sub-title">{{services_data.heading}}</span>
                        <h2 class="title">{{services_data.services_title}}</h2>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
            {% for index, val in service_details %}
                <div class="col-lg-4 col-md-6 col-sm-10">
                    <div class="services-item wow fadeInUp" data-wow-delay=".2s"
                        data-background="{{val.image}}">
                        <div class="services-icon">
                            <img src="{{val.icon}}" alt="">
                        </div>
                        <div class="services-content">
                            <h2 class="title"><a href="{{val.node_id}}">{{val.title}}</a></h2>
                            <h2 class="number">{{ ('0' ~ (index + 1))|slice(-2) }}</h2>
                        </div>
                        <div class="services-overlay-content">
                            <h2 class="title"><a href="{{val.node_id}}">{{val.title}}</a></h2>
                            <p>{{val.description|slice(0, 120) ~ (val.description|length > 120 ? '...' : '')}}</p>
                            <a href="{{val.node_id}}" class="read-more">Read More <i
                                    class="fas fa-arrow-right"></i></a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <!-- services-area-end -->

    <!-- project-area -->
    <section class="project-area project-bg" data-background="sites/default/files/2023-04/project_bg.jpg">
        <div class="container">
            <div class="row align-items-end">
                <div class="col-lg-8">
                    <div class="section-title white-title mb-50 tg-heading-subheading animation-style3">
                        <span class="sub-title tg-element-title">{{projects_data.heading}}</span>
                        <h2 class="title tg-element-title">{{projects_data.projects_title}}</h2>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="view-all-btn text-end mb-50">
                        <a href="/projects" class="btn">View All Projects</a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                {% for val in project_details %}
                    <div class="project-item wow fadeInUp" data-wow-delay=".2s">
                        <div class="project-thumb">
                            <img src="{{val.image}}" alt="">
                        </div>
                        <div class="project-content">
                            <div class="left-side-content">
                                <span>{{val.title}}</span>
                                <h2 class="title"><a href="{{val.node_id}}">{{val.project_title}}</a></h2>
                                <p>{{val.description|slice(0, 100) ~ (val.description|length > 100 ? '...' : '')}}</p>
                            </div>
                            <div class="project-link">
                                <a href="{{val.node_id}}"><i class="fas fa-arrow-right"></i></a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                </div>
            </div>
        </div>
    </section>
    <!-- project-area-end -->

    <!-- team-area -->
    <section class="team-area pt-115 pb-90">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="section-title text-center mb-60">
                        <span class="sub-title">{{team_data.heading}}</span>
                        <h2 class="title">{{team_data.team_title}}</h2>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
            {% for val in team_details %}
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-10">
                    <div class="team-item">
                        <div class="team-thumb">
                            <a href="{{val.node_id}}"><img src="{{val.image}}" alt=""></a>
                            <div class="team-social">
                                <ul class="list-wrap">
                                {% for social in val.socials %}
                                    <li><a href="{{social.link}}"><i class="fab {{social.class}}"></i></a></li>
                                {% endfor %}
                                </ul>
                            </div>
                        </div>
                        <div class="team-content">
                            <h2 class="title"><a href="{{val.node_id}}">{{val.title}}</a></h2>
                            <span>{{val.designation}}</span>
                        </div>
                    </div>
                </div>
            {% endfor %}
            </div>
        </div>
    </section>
    <!-- team-area-end -->

    <!-- counter-area -->
    {{ drupal_block('views_block:achievement-block_1') }}
    <!-- counter-area-end -->

</main>